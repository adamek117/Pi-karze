<UserControl x:Class="Piłkarze1.Kontrolka"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Piłkarze1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border x:Name="Obramowanie" x:FieldModifier="private" BorderBrush="Green" BorderThickness="0">
            <TextBox x:Name="Pole_tekst" x:FieldModifier="private" >
                <TextBox.ToolTip>
                    <ToolTip x:Name="Narzędzia" Visibility="Hidden">
                        <TextBlock x:Name="Pole_tekstu_narzędzia" x:FieldModifier="private" Text="Wpisz tekst"/>
                    </ToolTip>
                </TextBox.ToolTip>
            </TextBox>
        </Border>   
    </Grid>
</UserControl>
